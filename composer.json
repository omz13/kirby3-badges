{
  "name": "omz13/kirby3-badges",
  "description": "kirby3 plugin to provide a tag (badge) to make badges",
  "keywords": [
    "kirby3",
    "plugin",
    "badges"
  ],
  "version": "0.0.0",
  "license": "MIT",
  "authors": [
    {
      "name": "David Somers",
      "email": "dsomers@omz13.com",
      "homepage": "https://meldingstuff.com",
      "role": "Developer"
    }
  ],
  "require": {
    "php": ">=7.1",
    "badges/poser": "^1.2",
    "getkirby/cms": "dev-master as 3.0.0"
  },
  "require-dev": {
    "dealerdirect/phpcodesniffer-composer-installer": "^0.4.4",
    "jakub-onderka/php-parallel-lint": "^1.0",
    "omz13/omz13-coding-standard": "dev-master",
    "phpmd/phpmd": "^2.6",
    "phpstan/phpstan": "^0.10.3",
    "roave/security-advisories": "dev-master"
  },
  "config": {
    "optimize-autoloader": true,
    "sort-packages": true
  },
  "autoload": {
    "psr-4": {
      "omz13\\": "src/"
    },
    "files": [
      "src/config.php"
    ]
  },
  "archive": {
    "exclude": [
      ".*",
      "makefile",
      "*.xml",
      "!/vendor/*",
      "/vendor/*/*/.*",
      "/vendor/*/*/docs/*",
      "/vendor/*/*/example/*",
      "/vendor/*/*/examples/*",
      "/vendor/*/*/test/*",
      "/vendor/*/*/tests/*",
      "/vendor/*/*/php4/*"
    ]
  },
  "repositories": [
    {
      "type": "vcs",
      "url": "https://github.com/k-next/kirby"
    }
  ],
  "minimum-stability": "beta",
  "scripts": {
    "build": [
      "@sanity",
      "composer dumpautoload -o"
    ],
    "fix": [
      "./vendor/bin/phpcbf ./src/*",
      "./vendor/bin/phpcs -s ./src/*"
    ],
    "lint": "./vendor/bin/parallel-lint ./src/*",
    "mess": "./vendor/bin/phpmd ./src text codesize,controversial,design,unusedcode",
    "sanity": [
      "make tools",
      "@lint",
      "./vendor/bin/phpcs -n ./src/*",
      "@stan",
      "@mess"
    ],
    "stan": "./vendor/bin/phpstan analyse --level 7 ./src",
    "style": "./vendor/bin/phpcs ./src/*",
    "zip": [
      "composer remove getkirby/cms",
      "composer install --no-dev",
      "composer dumpautoload -o",
      "composer archive --format=zip --dir=dist",
      "composer require getkirby/cms:'dev-master as 3.0.0'",
      "composer dumpautoload -o"
    ]
  }
}
